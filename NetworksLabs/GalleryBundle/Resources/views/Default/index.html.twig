<html>
<head>
<link href="{{asset('bundles/networkslabsgallery/css/base.css')}}" media="screen" rel="stylesheet" type="text/css" />

</head>
<body>
<div id="phototheque">
	<div class="titre">Ajouter une image :</div>
	<div id="add">
	<span class="error">{{message}}</span>
	<div id="form-content">
	<form action="{{path('NetworksLabsGalleryBundle_homepage')}}" method="post" {{ form_enctype(form) }}>
            {{form_errors(form.file)}}<br/>
            {{form_label(form.file,'Image',{'attr':{'style':'width:50px;'}})}} {{form_widget(form.file)}}
            {{form_rest(form)}}
	    <input type="submit" id="submit" value="" name="submit" style="margin-left:0;" />
	</form>
	</div>
	</div>
	<div class="titre">Selectionner une photo :</div>
	<div id="photos">
	<ul id="photo-list">
	    {%for image in files%}
		<li>
	
		    <img class="vignette" src="{{asset('upload/free/'~image.getRelativePathName())}}" align="absmiddle"/>
		    <br/>
		   <!-- <input type="text" size="20" value="http://{{host}}{{asset('/upload/'~image.getRelativePathName())}}" />-->
		    <div class="delete">
                {{image.getRelativePathName()|slice(32)}}<br/>
		        <a href="{{url('NetworksLabsGalleryBundle_delete', {'picture':image.getRelativePathName()|slice(0,32)})}}">supprimer</a>
		    </div>
		</li>
	    {%endfor%}
	</ul>
	</div>

</div>
{%block javascripts%}
   <script type="text/javascript" src="/enews/bundles/networkslabsgallery/js/jquery-1.7.1.min.js"></script>
   <script type="text/javascript" src="/enews/bundles/networkslabsgallery/js/common.js"></script>

{%endblock%}
</body>
</html>
